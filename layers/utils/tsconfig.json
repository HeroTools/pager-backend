{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./nodejs/node_modules/shared-core",
    "baseUrl": "./",
    "paths": {
      "shared-core": ["nodejs/node_modules/shared-core"],
      "shared-core/*": ["nodejs/node_modules/shared-core/*"]
    }
  },
  "include": ["src/**/*"]
}
